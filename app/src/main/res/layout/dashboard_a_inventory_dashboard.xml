<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="#ffffff"
                android:orientation="vertical">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:elevation="5dp">

                <androidx.percentlayout.widget.PercentRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient">

                    <androidx.percentlayout.widget.PercentRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/imageholder"
                            android:paddingTop="20dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                            <androidx.percentlayout.widget.PercentRelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp">

                                <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/inventorydashboardicon"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_toLeftOf="@+id/marker"
                                        android:padding="19dp"
                                        android:src="@drawable/boxes"/>

                                <TextView
                                        android:id="@+id/inventorydashboardmarker"
                                        android:layout_width="4dp"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true"
                                        android:background="@color/appfontcolor"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp">

                                </TextView>

                            </androidx.percentlayout.widget.PercentRelativeLayout>



                            <androidx.percentlayout.widget.PercentRelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp">

                                <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/shipmentdashboardicon"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_toLeftOf="@+id/marker"
                                        android:padding="19dp"
                                        android:src="@drawable/shipreporticon"/>

                                <TextView
                                        android:id="@+id/shipmentdashboardmarker"
                                        android:layout_width="4dp"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp">

                                </TextView>

                            </androidx.percentlayout.widget.PercentRelativeLayout>


                            <androidx.percentlayout.widget.PercentRelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp">

                                <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/pickicon"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_toLeftOf="@+id/marker"
                                        android:padding="19dp"
                                        android:src="@drawable/pickicon"/>

                                <TextView
                                        android:id="@+id/pickmarker"
                                        android:layout_width="4dp"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp">

                                </TextView>

                            </androidx.percentlayout.widget.PercentRelativeLayout>


                            <androidx.percentlayout.widget.PercentRelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp">

                                <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/shipicon"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_toLeftOf="@+id/marker"
                                        android:padding="19dp"
                                        android:src="@drawable/shipicon"/>

                                <TextView
                                        android:id="@+id/shipmarker"
                                        android:layout_width="4dp"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp">

                                </TextView>

                            </androidx.percentlayout.widget.PercentRelativeLayout>

                        </LinearLayout>


                    </androidx.percentlayout.widget.PercentRelativeLayout>

                    <androidx.percentlayout.widget.PercentRelativeLayout
                            android:id="@+id/imageholder"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:layout_marginBottom="10dp"
                            android:layout_alignParentBottom="true">


                        <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/logout"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="8dp"
                                android:src="@drawable/logout"/>

                    </androidx.percentlayout.widget.PercentRelativeLayout>


                </androidx.percentlayout.widget.PercentRelativeLayout>

            </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="25dp"
                            android:orientation="vertical">


                        <androidx.percentlayout.widget.PercentRelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                            <TextView
                                    android:id="@+id/dashboardname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Welcome back ! "
                                    android:layout_marginLeft="15dp"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:fontFamily="@font/worksansbold"
                                    android:textColor="@color/appfontcolor"/>

                            <androidx.percentlayout.widget.PercentRelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:layout_below="@+id/dashboardname"
                                android:layout_marginTop="10dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/userprofileicon"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    app:civ_border_width="2dp"
                                    android:layout_marginLeft="15dp"
                                    android:visibility="invisible"
                                    app:civ_border_color="@color/mildwhite"/>

                                <TextView
                                    android:id="@+id/blinkimageview"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_marginLeft="15dp" />

                                <TextView
                                    android:id="@+id/blinkingname"
                                    android:layout_width="150dp"
                                    android:layout_height="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@+id/userprofileicon"
                                    android:layout_below="@+id/dashboardname"
                                    android:background="@drawable/spinner" />

                                <TextView
                                    android:id="@+id/username"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:paddingLeft="15dp"
                                    android:textSize="14sp"
                                    android:textStyle="normal"
                                    android:gravity="center_vertical"
                                    android:visibility="invisible"
                                    android:layout_toRightOf="@+id/userprofileicon"
                                    android:layout_below="@+id/dashboardname"
                                    android:fontFamily="@font/opensanssemibold"
                                    android:textColor="@color/appfontcolor"/>

                                <TextView
                                    android:id="@+id/blinkingimage"
                                    android:layout_width="150dp"
                                    android:layout_height="20dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@+id/userprofileicon"
                                    android:layout_below="@+id/username"
                                    android:background="@drawable/spinner">

                                </TextView>

                                <Spinner
                                    android:id="@+id/warehousespinner"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@+id/userprofileicon"
                                    android:layout_below="@+id/username"
                                    android:visibility="invisible"
                                    android:background="@drawable/spinner">

                                </Spinner>

                            </androidx.percentlayout.widget.PercentRelativeLayout>



                        </androidx.percentlayout.widget.PercentRelativeLayout>


                    </LinearLayout>


                </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
